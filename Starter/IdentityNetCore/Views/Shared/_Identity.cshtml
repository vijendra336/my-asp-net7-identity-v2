@{
    var loggedIn = User.Identity.IsAuthenticated;
}


@if (loggedIn)
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Identity" asp-action="Signout">Signout</a>
    </li>
    <li class="nav-item">
       <label> Hello @User.Identity.Name  (@User.Claims.FirstOrDefault(claim=> claim.Type=="Department")) </label>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Identity" asp-action="Signup">Sign up</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Identity" asp-action="Signin">Sign in</a>
    </li>
}
